# AegisLang Environment Variables
# Copy this file to .env and fill in your values
# Version: 1.0.0

# -----------------------------------------------------------------------------
# LLM API Keys (Required: at least one)
# -----------------------------------------------------------------------------
# Anthropic API key for Claude models
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# OpenAI API key (required if using OpenAI as provider)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Database Configuration (Required)
# -----------------------------------------------------------------------------
# PostgreSQL connection string for schema registry and metadata
DATABASE_URL=postgresql://aegislang:password@localhost:5432/aegislang

# -----------------------------------------------------------------------------
# Vector Store Configuration (Required for semantic search)
# -----------------------------------------------------------------------------
# Pinecone API key
PINECONE_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Graph Database Configuration (Required for provenance tracking)
# -----------------------------------------------------------------------------
# Neo4j connection URI
NEO4J_URI=bolt://localhost:7687

# Neo4j credentials
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# -----------------------------------------------------------------------------
# Event Bus Configuration (Required for Agent-OS integration)
# -----------------------------------------------------------------------------
# Redis URL for event bus and caching
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Security Configuration (Required)
# -----------------------------------------------------------------------------
# Secret key for JWT token signing (generate a secure random string)
JWT_SECRET=your-secure-random-secret-key-min-32-chars

# -----------------------------------------------------------------------------
# Optional Configuration
# -----------------------------------------------------------------------------
# Override log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Server port (default: 8080)
SERVER_PORT=8080

# Environment (development, staging, production)
ENVIRONMENT=development
